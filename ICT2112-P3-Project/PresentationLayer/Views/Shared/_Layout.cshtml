<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PresentationLayer</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <!-- Template Main CSS File -->
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PresentationLayer.styles.css" asp-append-version="true" />

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
        rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link rel="stylesheet" href="~/Custom/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/Custom/animate.css/animate.min.css">
    <link rel="stylesheet" href="~/Custom/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Custom/boxicons/css/boxicons.min.css">
    <link rel="stylesheet" href="~/Custom/glightbox/css/glightbox.min.css">
    <link rel="stylesheet" href="~/Custom/remixicon/remixicon.css">
    <link rel="stylesheet" href="~/Custom/swiper/swiper-bundle.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</head>

<body>


    <!--Nav bar start-->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a asp-area="" asp-controller="Home" asp-action="Index">Medilab</a></h1>


            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <!-- Do asp-area="" and asp-action="" whenever you want to redirect -->
                    <li><a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "active" : "")"
                            asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "DrugRecord") ? "active" : "")"
                            asp-controller="DrugRecord" asp-action="Index">Drug Record</a></li>
                    <li><a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "MedicalPlan") ? "active" : "")"
                            asp-controller="MedicalPlan" asp-action="Index">Medical Plan</a></li>
                    <li><a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "MedicationTracker") ? "active" : "")"
                            asp-controller="MedicationTracker" asp-action="Index">Medication Tracking</a>
                    <li><a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "MedicalCounselling") ? "active" : "")"
                           asp-controller="MedicalCounselling" asp-action="Index">Medical Counselling</a>

                        <!-- Team 4 -->
                    <li><a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "SafetyChecklist") ? "active" : "")"
                           asp-controller="SafetyChecklist" asp-action="Index">Safety Checklist</a>
                    <li><a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "DocumentationInput") ? "active" : "")"
                           asp-controller="DocumentationInput" asp-action="Documentation">Documentation</a>

                    <li>
                        <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Communication") ? "active" : "")"
                           asp-controller="Communication" asp-action="Index">Communication</a>
                

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar end -->

        </div>
    </header><!-- End Header -->

    <div class="container">
        <main role="main" id="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-4 col-md-12 footer-contact">
                        <h3>Medilab</h3>
                        <p>
                            A108 Adam Street <br>
                            New York, NY 535022<br>
                            United States <br><br>
                            <strong>Phone:</strong> +1 5589 55488 55<br>
                            <strong>Email:</strong> info@example.com<br>
                        </p>
                    </div>

                    <div class="col-lg-4 col-md-12 footer-links">
                        <h4>Useful Links</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i><a href="#">Home</a></li>
                            <li><i class="bx bx-chevron-right"></i><a href="#">About us</a></li>
                            <li><i class="bx bx-chevron-right"></i><a href="#">Services</a></li>
                            <li><i class="bx bx-chevron-right"></i><a href="#">Terms of service</a></li>
                            <li><i class="bx bx-chevron-right"></i><a href="#">Privacy policy</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-12 footer-links">
                        <h4>Our Services</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Web Design</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Web Development</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Product Management</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Marketing</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Graphic Design</a></li>
                        </ul>
                    </div>



                </div>
            </div>
        </div>

        <div class="container d-md-flex py-4">

            <div class="me-md-auto text-center text-md-start">
                <div class="copyright">
                    &copy; Copyright <strong><span>Medilab</span></strong>. All Rights Reserved
                </div>

            </div>
            <div class="social-links text-center text-md-right pt-3 pt-md-0">
                <a class="twitter"><i class="bx bxl-twitter"></i></a>
                <a class="facebook"><i class="bx bxl-facebook"></i></a>
                <a class="instagram"><i class="bx bxl-instagram"></i></a>
                <a class="google-plus"><i class="bx bxl-skype"></i></a>
                <a class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
        </div>
    </footer><!-- End Footer -->
    <!-- Vendor JS Files -->
    <script src="~/Custom/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Custom/glightbox/js/glightbox.min.js"></script>
    <script src="~/Custom/swiper/swiper-bundle.min.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

@functions {
    public string IsActive(string controller, string action)
    {
        var currentAction = ViewContext.RouteData.Values["Action"] as string;
        var currentController = ViewContext.RouteData.Values["Controller"] as string;

        return (controller == currentController && action == currentAction) ? "active" : "";
    }
}